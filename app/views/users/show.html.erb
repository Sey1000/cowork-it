<div class="user-container">
  <div class="profile-pic">
    <% if current_user %>
      <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/100x100" %>
      <%= image_tag avatar_url, class: "avatar-lg" %>
    <% else %>
      <%= image_tag "http://placehold.it/100x100", class: "avatar-lg" %>
    <% end %>
  </div>
  <h3><%= @user.first_name %> <%= @user.last_name %></h3>
  <div class="content">
    <div class="grid">
      <div class="profile-header">
        <p>Profile Data</p>
      </div>
      <div class="first_name-header">
        <p>First Name</p>
      </div>
      <div class="first_name text-center">
        <p><%= current_user.first_name %></p>
      </div>
      <div class="last_name-header">
        <p>Last Name</p>
      </div>
      <div class="last_name text-center">
        <%= current_user.last_name %>
      </div>
      <div class="email-header">
        <p>E-Mail</p>
      </div>
      <div class="email text-center">
        <%= current_user.email %>
      </div>
      <div class="change-password text-center">
        <%= link_to "Change your password", edit_user_password_path %>
      </div>
      <div class="bookings-header">
        <p>Your Bookings</p>
      </div>
      <div class="date-header">
        <p>Date</p>
      </div>
      <div class="date">
        <p>01.08.2017</p>
      </div>
      <div class="time-header">
        <p>Time</p>
      </div>
      <div class="time">
        <p>17:00 - 18:00</p>
      </div>
      <div class="coffeeshop-header">
        <p>Coffeeshop</p>
      </div>
      <div class="coffeeshop-name">
        <p>Einstein Cafe</p>
      </div>

    </div>
  </div>
</div>
