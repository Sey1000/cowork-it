<div class="col-xs-12 col-sm-6 cards-wrap">
  <div class="card">
    <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= card_banner_url %>');">
      <div class="card-name">
        <h2><%= coffeshop_name %></h2>
      </div>
      <div class="show-card">
        <div class="card-description">

        <p><%= coffeeshop_subtitle %></p>
        </div>
      </div>
    </div>
    <div class="card-bottom">
      <div class="desk-icons">
        <div class="feature">
          <% if wifi %>
          <i class="fa fa-wifi "></i>
          <% end %>
        </div>
        <div class="feature">
          <% if power_outlet %>
          <i class="fa fa-plug "></i>
          <% end %>
        </div>
        <div class="feature">
          <i class="fa fa-users "></i>
          <%= capacity %>
        </div>
      </div>

      <div class="card-price"> <%= average_desk_price %> </div>
    </div>
    <a class="card-link" href="#" ></a>
    <%= link_to "", link_path, class: "card-link"  %>

  </div>
</div>

